{
  "name": "@free/stack",
  "version": "1.0.0",
  "private": "true",
  "description": "FreeJS Stack for NodeJS ",
  "scripts": {
    "build": "yarn clean:build && yarn build:web && yarn build:server",
    "build:server": "yarn workspace @free/server build",
    "build:web": "yarn workspace @free/web build",
    "analyze": "yarn workspace @free/web analyze",
    "build:tw": "yarn workspace @free/tailwind build",
    "dev": "run-p dev:ldap dev:web dev:server",
    "dev:ldap": "yarn workspace @free/ldapmock start",
    "dev:web": "yarn workspace @free/web start",
    "dev:server": "yarn workspace @free/server start",
    "clean:build": "rm -rf ./build",
    "clean:repo": "rm -rf ./node_modules ./packages/**/node_modules ./repo/mobile/ios/Podfile.lock ./repo/mobile/ios/Pods  ./yarn.lock",
    "start": "NODE_ENV=production node --trace-warnings ./build | NODE_ENV=production logger",
    "start:ldap": "run-p dev:ldap start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/fortezhuo/freejs.git"
  },
  "keywords": [
    "react",
    "universal",
    "monorepo",
    "framework",
    "react-native"
  ],
  "author": "Hedi Kasmanto",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/fortezhuo/freejs/issues"
  },
  "homepage": "https://gitlab.com/fortezhuo/freejs#readme",
  "prettier": {
    "semi": false
  },
  "dependencies": {
    "@free/logger": "1.0.0",
    "ajv": "^6.12.3",
    "axios": "^0.19.2",
    "dayjs": "^1.8.31",
    "fastify": "^3.1.1",
    "fastify-compress": "^3.2.2",
    "fastify-cookie": "^4.0.2",
    "fastify-http-proxy": "^4.0.2",
    "fastify-plugin": "^2.0.3",
    "fastify-session": "github:fortezhuo/fastify-session",
    "fastify-static": "^3.2.0",
    "fluent-schema": "^1.0.4",
    "ldapjs": "^1.0.2",
    "mongodb": "^3.5.9",
    "npm-run-all": "^4.1.5",
    "role-acl": "^4.5.4",
    "simple-ldap-search": "^2.0.11"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/ldapjs": "^1.0.8",
    "@types/node": "^14.0.27",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
