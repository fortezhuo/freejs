{
  "name": "@free/stack",
  "version": "1.0.0",
  "private": "true",
  "description": "FreeJS Stack for NodeJS ",
  "scripts": {
    "analyze": "yarn workspace @free/web analyze",
    "build": "yarn clean:log && yarn clean:build && yarn build:env && yarn build:web && yarn build:server",
    "build:server": "yarn workspace @free/server build",
    "build:web": "yarn workspace @free/web build",
    "build:env": "yarn workspace @free/env build",
    "build:tw": "yarn workspace @free/tailwind build",
    "dev": "run-p dev:ldap dev:web dev:server",
    "dev:android": "run-p dev:server:mobile dev:ldap android",
    "dev:ios": "run-p dev:server:mobile dev:ldap ios",
    "dev:ldap": "yarn workspace @free/ldapmock start",
    "dev:web": "yarn workspace @free/web start",
    "dev:server": "yarn workspace @free/server start",
    "dev:server:mobile": "MOBILE=development yarn workspace @free/server start",
    "clean:build": "rm -rf ./build",
    "clean:build:win": "del \"build\"",
    "clean:log": "rm -rf ./log/*.log",
    "clean:log:win": "del \"log\\*.log\"",
    "clean:repo": "rm -rf ./node_modules ./packages/**/node_modules ./repo/mobile/ios/Podfile.lock ./repo/mobile/ios/Pods  ./yarn.lock",
    "clean:repo:win": "del /node_modules /packages/**/node_modules /repo/mobile/ios/Podfile.lock /repo/mobile/ios/Pods  /yarn.lock",
    "start": "NODE_ENV=production node --trace-warnings ./build | NODE_ENV=production logger",
    "start:win": "SET NODE_ENV=production node --trace-warnings ./build | SET NODE_ENV=production logger",
    "start:ldap": "run-p dev:ldap start",
    "start:ldap:win": "run-p dev:ldap start:win",
    "android": "yarn workspace @free/mobile android",
    "ios": "yarn workspace @free/mobile ios",
    "test:role": "yarn workspace @free/env test-role",
    "postinstall": "yarn workspace @free/env clear-error"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/fortezhuo/freejs.git"
  },
  "keywords": [
    "react",
    "universal",
    "monorepo",
    "framework",
    "react-native"
  ],
  "author": "Hedi Kasmanto",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/fortezhuo/freejs/issues"
  },
  "homepage": "https://gitlab.com/fortezhuo/freejs#readme",
  "prettier": {
    "semi": false
  },
  "dependencies": {
    "@free/logger": "1.0.0",
    "@types/lodash": "^4.14.161",
    "ajv": "^6.12.4",
    "axios": "^0.19.2",
    "dayjs": "^1.8.31",
    "fastify": "^3.1.1",
    "fastify-compress": "^3.2.2",
    "fastify-cookie": "^4.0.2",
    "fastify-favicon": "^3.0.0",
    "fastify-plugin": "^2.3.0",
    "fastify-session": "^5.0.0",
    "fastify-static": "^3.2.0",
    "filesize": "^6.1.0",
    "fluent-schema": "^1.0.4",
    "ldapjs": "^1.0.2",
    "lodash": "^4.17.20",
    "monk": "^7.3.1",
    "npm-run-all": "^4.1.5",
    "role-acl": "^4.5.4",
    "simple-ldap-search": "^2.0.11"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/ldapjs": "^1.0.8",
    "@types/node": "^14.0.27",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
